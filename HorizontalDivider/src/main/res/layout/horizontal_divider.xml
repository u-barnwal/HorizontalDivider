<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:gravity="center_vertical"
  android:orientation="horizontal">

  <View
    android:id="@+id/vLeft"
    android:layout_width="0dp"
    android:layout_height="2dp"
    android:layout_marginEnd="@dimen/s_smaller"
    android:layout_weight="1"
    android:background="@color/black" />

  <TextView
    android:id="@+id/tvTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_horizontal_divider_title"
    android:paddingHorizontal="@dimen/s_medium"
    android:paddingVertical="@dimen/s_x_small"
    android:text="Title"
    android:textColor="@color/black"
    android:textStyle="bold" />

  <View
    android:id="@+id/vRight"
    android:layout_width="0dp"
    android:layout_height="2dp"
    android:layout_marginStart="@dimen/s_smaller"
    android:layout_weight="1"
    android:background="@color/black" />

</LinearLayout>
